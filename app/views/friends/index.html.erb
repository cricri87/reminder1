<div class="container">
  <h1 class="text-center"> <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %> </h1>
  <h2>List of all your friends</h2>

 <div class="list-friends">
    <ol>
     <% @friends.each do |friend| %>
     <%= link_to friend_path(friend) do %>
      <li> <%= friend.first_name.capitalize %> <%= friend.last_name.capitalize %> Friends since <%= friend.created_at.strftime('%D') %> <%= link_to '', friend, class: 'fas fa-trash-alt', method: :delete, data: {confirm: "Are you sure?"} %>
   </li><hr>
      <% end %>

     <% end %>
   </ol>
 </div>

  <%= link_to 'Add friend', new_friend_path, class: 'btn btn-primary' %>
</div>
